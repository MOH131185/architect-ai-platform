{
  "name": "A1 Landscape Master Sheet",
  "description": "Single Output Sheet for complete architectural presentation with all views, plans, elevations, and metrics",
  "size_mm": [841, 594],
  "margins_mm": 15,
  "background": "#FFFFFF",
  "grid": {
    "enabled": false,
    "spacing_mm": 10,
    "color": "#E0E0E0"
  },
  "title_block": {
    "id": "title",
    "x": 15,
    "y": 524,
    "w": 811,
    "h": 55,
    "background": "#F5F5F5",
    "border": {
      "width": 0.5,
      "color": "#333333"
    },
    "fields": [
      {
        "label": "PROJECT",
        "x": 10,
        "y": 10,
        "font_size": 5,
        "font_weight": "bold",
        "value": "project_name"
      },
      {
        "label": "LOCATION",
        "x": 10,
        "y": 20,
        "font_size": 3.5,
        "value": "location_address"
      },
      {
        "label": "DESIGN ID",
        "x": 10,
        "y": 30,
        "font_size": 3,
        "value": "design_id"
      },
      {
        "label": "SEED",
        "x": 10,
        "y": 37,
        "font_size": 3,
        "value": "seed"
      },
      {
        "label": "HASH",
        "x": 10,
        "y": 44,
        "font_size": 2.5,
        "font_family": "monospace",
        "value": "design_hash"
      },
      {
        "label": "SCALE",
        "x": 300,
        "y": 10,
        "font_size": 4,
        "value": "1:100"
      },
      {
        "label": "DATE",
        "x": 300,
        "y": 20,
        "font_size": 3.5,
        "value": "generation_date"
      },
      {
        "label": "REVISION",
        "x": 300,
        "y": 30,
        "font_size": 3.5,
        "value": "revision"
      },
      {
        "label": "STATUS",
        "x": 450,
        "y": 10,
        "font_size": 4,
        "value": "status"
      },
      {
        "label": "CONSISTENCY",
        "x": 450,
        "y": 20,
        "font_size": 3.5,
        "value": "consistency_score"
      },
      {
        "type": "north_arrow",
        "x": 760,
        "y": 10,
        "size": 35
      },
      {
        "type": "scale_bar",
        "x": 600,
        "y": 40,
        "length_mm": 150,
        "scale": "1:100",
        "segments": 5
      },
      {
        "type": "qr_code",
        "x": 720,
        "y": 10,
        "size": 35,
        "url": "project_url"
      }
    ]
  },
  "slots": [
