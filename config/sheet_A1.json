  "lineweights_mm": {
    "cut": 0.35,
    "profile": 0.25,
    "thin": 0.18,
    "dimension": 0.13,
    "grid": 0.09
  },
  "fonts": {
    "family": "Inter, Arial, sans-serif",
    "title_size_mm": 5.0,
    "label_size_mm": 3.5,
    "text_size_mm": 3.0,
    "dimension_size_mm": 2.5,
    "note_size_mm": 2.0
  },
  "colors": {
    "text": "#000000",
    "dimension": "#0066CC",
    "cut_line": "#000000",
    "profile_line": "#333333",
    "grid_line": "#CCCCCC",
    "hatch_fill": "#F0F0F0"
  },
  "compliance_badges": {
    "x": 15,
    "y": 510,
    "spacing": 60,
    "badges": [
      {
        "id": "door_width",
        "label": "Door Width ≥800mm",
        "rule": "min_door_width_mm >= 800"
      },
      {
        "id": "corridor_width",
        "label": "Corridor ≥900mm",
        "rule": "min_corridor_width_mm >= 900"
      },
      {
        "id": "stair_pitch",
        "label": "Stair Pitch ≤42°",
        "rule": "max_stair_pitch_deg <= 42"
      },
      {
        "id": "wwr",
        "label": "WWR 0.25-0.45",
        "rule": "wwr >= 0.25 && wwr <= 0.45"
      },
      {
        "id": "head_height",
        "label": "Head Height ≥2.0m",
        "rule": "min_head_height_m >= 2.0"
      }
    ]
  }
}
