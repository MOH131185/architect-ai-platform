# ArchiAI Platform Environment Variables
# Copy this file to .env and fill in your actual API keys

# ============================================================
# REQUIRED APIs
# ============================================================

# Google Maps API (for location intelligence only)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
# Optional: Map ID for AdvancedMarkerElement support (create in Google Cloud Console)
# REACT_APP_GOOGLE_MAPS_MAP_ID=your_map_id_here

# OpenWeather API (for climate data only)
REACT_APP_OPENWEATHER_API_KEY=your_openweather_api_key_here

# Together AI API Key (PRIMARY - for ALL reasoning and image generation)
# Get your key from: https://api.together.xyz/
# Uses Meta Llama 3.1 405B Instruct Turbo for reasoning
# Uses FLUX.1-schnell/dev for image generation
TOGETHER_API_KEY=your_together_api_key_here

# ============================================================
# OPTIONAL / LEGACY APIs
# ============================================================

# OpenAI API Keys (DEPRECATED - now using Together AI for all reasoning)
# These are kept for backward compatibility only
OPENAI_REASONING_API_KEY=your_openai_api_key_here
OPENAI_IMAGES_API_KEY=your_openai_api_key_here
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Replicate API (Optional fallback)
REACT_APP_REPLICATE_API_KEY=your_replicate_api_key_here

# API Proxy URL (optional - for production deployment)
# REACT_APP_API_PROXY_URL=https://your-domain.com/api

# ============================================================
# ControlNet Multi-View Workflow Configuration
# ============================================================
# Enable ControlNet-based multi-view generation for perfect consistency
# When enabled, generates 6 consistent views (floor plan, 2 exteriors, interior, axonometric, perspective)
# using ControlNet conditioning for structural fidelity
REACT_APP_USE_CONTROLNET_WORKFLOW=false

# Together AI Service (Alternative AI provider)
# Enable Together AI for DNA-driven consistency system
REACT_APP_USE_TOGETHER=false
TOGETHER_API_KEY=your_together_api_key_here
