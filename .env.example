# ArchitectAI Platform Environment Variables
# Copy this file to .env and fill in your API keys

# ===========================
# REQUIRED API KEYS
# ===========================

# OpenAI API Key (Required)
# Get one from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
# Legacy support (use either OPENAI_API_KEY or REACT_APP_OPENAI_API_KEY)
# REACT_APP_OPENAI_API_KEY=sk-your-openai-api-key-here

# Replicate API Token (Required)
# Get one from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your-replicate-api-token-here
# Legacy support (use either REPLICATE_API_TOKEN or REACT_APP_REPLICATE_API_KEY)
# REACT_APP_REPLICATE_API_KEY=r8_your-replicate-api-token-here

# Google Maps API Key (Required)
# Get one from: https://console.cloud.google.com/
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# OpenWeather API Key (Required)
# Get one from: https://openweathermap.org/api
REACT_APP_OPENWEATHER_API_KEY=your-openweather-api-key-here

# ===========================
# OPTIONAL SERVICES
# ===========================

# Python DXF Microservice URL (Optional - for DXF export)
# Default: http://localhost:8000
# PYTHON_SERVICE_URL=http://localhost:8000

# AWS S3 Configuration (Optional - for file storage)
# S3_BUCKET=your-s3-bucket-name
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-west-2

# ===========================
# SERVER CONFIGURATION
# ===========================

# Express Server Port
PORT=3001

# Node Environment (development | production | test)
NODE_ENV=development

# ===========================
# DATABASE & CACHING (Optional)
# ===========================

# PostgreSQL Database URL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/architect_ai

# Redis URL (for caching)
# REDIS_URL=redis://localhost:6379

# ===========================
# FEATURE FLAGS
# ===========================

# Enable DXF export functionality
ENABLE_DXF_EXPORT=true

# Enable ControlNet for image generation
ENABLE_CONTROLNET=true

# Enable OpenAI vision validation
ENABLE_VALIDATION=true

# Enable text modification loop
ENABLE_MODIFY_LOOP=true

# ===========================
# RATE LIMITS & TIMEOUTS
# ===========================

# API rate limits (requests per minute)
# OPENAI_RATE_LIMIT=20
# REPLICATE_RATE_LIMIT=10

# Timeout settings (milliseconds)
# API_TIMEOUT=30000
# IMAGE_GENERATION_TIMEOUT=120000

# ===========================
# DEBUGGING
# ===========================

# Enable debug logging in production
# REACT_APP_DEBUG=true

# Verbose logging level (error | warn | info | verbose | debug)
# LOG_LEVEL=info
